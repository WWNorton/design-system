{
  "version": "1.0.1",
  "packages": ["packages/*", "website"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "access": "public",
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "signGitCommit": true,
      "signGitTag": true
    },
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "signGitCommit": true,
      "signGitTag": true,
      "changelogPreset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "hidden": false,
            "section": "✨ Features"
          },
          {
            "type": "fix",
            "hidden": false,
            "section": "🐛 Bug Fixes"
          },
          {
            "type": "visual",
            "hidden": false,
            "section": "💄 Visual design"
          },
          {
            "type": "perf",
            "hidden": false,
            "section": "⚡️ Performance"
          },
          {
            "type": "docs",
            "hidden": false,
            "section": "📝 Documentation"
          },
          {
            "type": "chore",
            "hidden": true,
            "section": "🛠 Maintenance"
          },
          {
            "type": "style",
            "hidden": true,
            "section": "🎨 Code style"
          },
          {
            "type": "refactor",
            "hidden": false,
            "section": "♻️ Refactor"
          },
          {
            "type": "test",
            "hidden": true,
            "section": "🧪 Tests"
          }
        ],
        "issuePrefixes": ["#"],
        "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}",
        "commitUrlFormat": "{{host}}/{{owner}}/{{repository}}/commit/{{hash}}",
        "compareUrlFormat": "{{host}}/{{owner}}/{{repository}}/compare/{{previousTag}}...{{currentTag}}",
        "userUrlFormat": "{{host}}/{{user}}"
      }
    }
  }
}
